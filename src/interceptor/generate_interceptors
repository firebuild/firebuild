         msg_add_fields=["BUILDER_SET_ABSOLUTE_CANONICAL(fstatat, pathname);",
                         "if (success) {",
                         "  fbbcomm_builder_fstatat_set_st_mode(&ic_msg, stat_buf->st_mode);",
