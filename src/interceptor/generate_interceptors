generate("int", "waitid", "idtype_t idtype, id_t id, siginfo_t *infop, int options",
         global_lock='after',
         before_lines=["siginfo_t infop_fallback;",
                       "if (!infop) infop = &infop_fallback;"],
         send_msg_on_error=False,
