skip("getresuid", "SYS_getresuid", "getresgid", "SYS_getresgid")
skip("getgroups", "SYS_getgroups", "group_member")
generate("int", ["setuid", "SYS_setuid", "seteuid"], "uid_t uid",
         tpl="once")
generate("int", ["setgid", "SYS_setgid", "setegid"], "gid_t gid",
         tpl="once")
